@model string

@{
    ViewData["bcbView"] = "Moedas do BCB em XML";
}

<h1>Conversão de JSON para XML</h1>

<div class="card">
    <div class="card-header">
        API da Conversão - Banco Central do Brasil
    </div>
    <div class="card-body">
        <p class="card-text">
            Nessa conversão foi utilizada a API do BCB:
            <b>
                <i>
                    Dólar comercial (venda e compra) - cotações diárias e Taxas de Câmbio - todos os boletins diários - v1
                </i>
            </b>
        </p>
        Link:
        <a href="https://olinda.bcb.gov.br/olinda/servico/PTAX/versao/v1/aplicacao#!/recursos/Moedas#" class="btn btn-primary">Aqui</a>
        | <a href="https://olinda.bcb.gov.br/olinda/servico/PTAX/versao/v1/odata/Moedas?$top=100&$format=json&$select=simbolo,nomeFormatado,tipoMoeda" class="btn btn-success">API</a>
    </div>
</div>
<hr />

<div class="card">
    <div class="card-body">
        <h5 class="card-title">JSON da API</h5>
        <a href="@Url.Action("GetJson", "Bcb")" class="btn btn-primary">Ver JSON</a>
    </div>
</div>

<hr />
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Converter JSON para XML</h5>
        <a href="@Url.Action("Get2XML", "Bcb")" class="btn btn-primary">Carregar XML</a>
    </div>
</div>

<hr />
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Baixar arquivo XML da conversão</h5>
        <a href="@Url.Action("GetXML", "Bcb")" class="btn btn-primary">Baixar arquivo XML</a>
    </div>
</div>


